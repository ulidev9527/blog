livedebugging {
  enabled = true
}

discovery.docker "docker" {
  host             = "unix:///var/run/docker.sock"
  refresh_interval = "5s"
}

// prometheus 写入端口
prometheus.remote_write "master_prometheus" {
    endpoint {
        url = "http://prometheus:9090/api/v1/write"
    }
}

// 定义 Loki 写入端
loki.write "master_loki" {
    endpoint {
        url = "http://grafana-loki:3100/loki/api/v1/push"
    }
}